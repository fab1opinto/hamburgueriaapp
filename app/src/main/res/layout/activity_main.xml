<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/hamburg"
        android:scaleType="centerCrop" />
    <TextView
        style="@style/EstiloTexto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FaÃ§a seu Pedido"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/campo_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome"/>

    <TextView
        style="@style/EstiloTexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adicionais" />

    <CheckBox
        android:id="@+id/bacon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bacon" />

    <CheckBox
        android:id="@+id/queijo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Queijo" />

    <CheckBox
        android:id="@+id/onionrings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Onion Rings" />

    <TextView
        style="@style/EstiloTexto"
        android:id="@+id/EstiloTexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantidade" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:onClick="subtrair"
            android:text="-"/>

        <TextView
            style="@style/EstiloTexto"
            android:id="@+id/quantidade_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="0"/>

        <Button
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:onClick="somar"
            android:text="+"/>



    </LinearLayout>

    <TextView
        style="@style/EstiloTexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resumo do Pedido" />

    <TextView
        style="@style/EstiloTexto"
        android:id="@+id/resumo_pedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$ 0" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="enviarPedido"
        android:text="Fazer Pedido" />


    </LinearLayout>


</ScrollView>